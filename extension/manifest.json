{
  "manifest_version": 2,
  "name": "Bamboo Full Log Formatter",
  "version": "0.1.0",
  "description": "Format the bamboo full log the same way the partial log is formatted",
  "homepage_url": "https://github.com/maudv/bamboo-full-log-formatter",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "applications": {
    "gecko": {
      "id": "maudv@maudv.net",
      "strict_min_version": "0.1.0"
    }
  },

  "content_scripts": [
    { 
      "matches": ["*://*/bamboo/*.log"],
      "js": ["js/color_logs.js"],
      "css": ["css/log_lines.css"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["*://*/bamboo/*.log"]
}
